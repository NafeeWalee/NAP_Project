<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nap_international.group_project">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_nap"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_nap_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginScreen.LoginScreen"
            android:label="@string/title_activity_login_screen" />
        <activity
            android:name=".HomeScreen.MainScreen"
            android:label="@string/title_activity_main_screen" />
        <activity android:name=".WebView.WebScreen" />
    </application>

</manifest>